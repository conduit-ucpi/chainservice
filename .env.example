# =============================================================================
# CHAIN SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================

# Server Configuration
# Port on which the Spring Boot application will run
SERVER_PORT=8978

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Avalanche network RPC endpoint URL
# Test: https://api.avax-test.network/ext/bc/C/rpc
# Mainnet: https://api.avax.network/ext/bc/C/rpc
RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Avalanche network chain ID (43113=Fuji testnet, 43114=mainnet)
CHAIN_ID=43113

# USDC token contract address on Avalanche
# Fuji testnet: 0x5425890298aed601595a70AB815c96711a31Bc65
# Mainnet: 0xB97EF9Ef8734C71904D8002F8b6Bc66Dd9c48a6E
USDC_CONTRACT_ADDRESS=0x5425890298aed601595a70AB815c96711a31Bc65

# Deployed EscrowContractFactory address
CONTRACT_FACTORY_ADDRESS=0xDBe3308dfCba26DA7072171F286268C5E69c9902

# =============================================================================
# RELAYER CONFIGURATION (REQUIRED)
# =============================================================================

# Ethereum wallet address that will pay gas fees for transactions
RELAYER_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# Contract address for gas paying
GAS_PAYER_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# NOTE: Private key is now loaded from JSON config file via blockchain-relay-utility v4.0.1
# No longer needed as environment variable
# Configure the relay config file path with RELAY_CONFIG_PATH (default: ./config/relay-config.json)
RELAY_CONFIG_PATH=./config/relay-config.json

# =============================================================================
# GAS CONFIGURATION
# =============================================================================

# Minimum gas price in wei (default: 6)
MIN_GAS_WEI=6

# =============================================================================
# ESCROW PLUGIN CONFIGURATION
# =============================================================================

# Minimum creator fee in USDC multiplied by 1 million (e.g., 10000 = 0.01 USDC) - used for validation only
MIN_CREATOR_FEE_USDC_X_1M=10000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# URL of the user authentication service
USER_SERVICE_URL=http://localhost:8977

# Enable/disable authentication (default: true)
AUTH_ENABLED=true

# =============================================================================
# SERVICE INTEGRATION URLS
# =============================================================================

# URL of the contract management service (default: http://localhost:8080)
CONTRACT_SERVICE_URL=http://localhost:8080

# Enable/disable contract service integration (default: true)
CONTRACT_SERVICE_ENABLED=true

# URL of the email notification service (default: http://localhost:8979)
EMAIL_SERVICE_URL=http://localhost:8979

# Enable/disable email service integration (default: true)
EMAIL_SERVICE_ENABLED=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Frontend application URL for email links and redirects
SERVICE_LINK=http://localhost:3000

# =============================================================================
# COOKIE CONFIGURATION
# =============================================================================

# Domain for setting authentication cookies
COOKIE_DOMAIN=localhost

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level for com.conduit.chainservice package (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
